# =============================================================================
# Shared Caddy Configuration - Multi-Domain Reverse Proxy
# =============================================================================
# This file is a REFERENCE. The actual Caddyfile used is at /opt/caddy/Caddyfile
# on the server, which routes BOTH domains:
#   - NewsDigest domain → news-digest-api / news-digest-frontend
#   - samgonzalezalberto.me → calculator-api
# =============================================================================

{
    email admin@samgonzalezalberto.me
}

# Calculator API
samgonzalezalberto.me {
    reverse_proxy calculator-api:8000

    header {
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    encode gzip

    log {
        output stdout
        format console
    }
}

www.samgonzalezalberto.me {
    redir https://samgonzalezalberto.me{uri} permanent
}
