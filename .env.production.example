# =============================================================================
# FastAPI Calculator - Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=calculator
POSTGRES_PASSWORD=CHANGE_ME_secure_password_here
POSTGRES_DB=calculator_db

# -----------------------------------------------------------------------------
# JWT Configuration (generate with: openssl rand -hex 32)
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
JWT_REFRESH_SECRET_KEY=CHANGE_ME_generate_another_one

# -----------------------------------------------------------------------------
# Token Expiration
# -----------------------------------------------------------------------------
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Password Hashing
# -----------------------------------------------------------------------------
BCRYPT_ROUNDS=12
